{
  "comments": {
    "lineComment": "//",
    "blockComment": [
      "/*",
      "*/"
    ]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["/*", "*/"]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""]
  ],
  "wordPattern": "(-?\\d+\\.\\d+)|(-?\\d+)|([A-Za-z_\\u00C0-\\u1FFF\\u2C00-\\uD7FF][A-Za-z0-9_\\u00C0-\\u1FFF\\u2C00-\\uD7FF]*)",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(si|mientras|para|tantachaña|luräwi|haceña).*\\{\\s*$",
    "decreaseIndentPattern": "^\\s*\\}"
  }
}
