{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "aymlang",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#types"
		},
		{
			"include": "#builtins"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.aym",
					"begin": "//",
					"end": "$\\n?"
				},
				{
					"name": "comment.block.aym",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.aym",
					"match": "(?i)\\b(qallta|tukuya|yatiya|suti|jisa|jani|maysatxa|kunawsati|ukhakamaxa|sapüru|taki|p'akhiña|sarantaña|yant'aña|katjaña|tukuyawi|pantja|kuttaya|lurawi|apnaq)\\b"
				},
				{
					"name": "keyword.other.aym",
					"match": "(?i)\\b(kasta|machaqa|aka|jila|jikxata|sapa|taqi|sapakasta|uñt'aya|chura|jilaaka)\\b"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "storage.type.aym",
					"match": "(?i)\\b(jakhüwi|aru|listaña|t'aqa|mapa)\\b"
				}
			]
		},
		"builtins": {
			"patterns": [
				{
					"name": "support.function.aym",
					"match": "(?i)\\b(qillqa|write|input|katu|length|random|sleep|array|array_get|array_set|array_free|array_length|largo|push|sin|cos|tan|asin|acos|atan|sqrt|pow|exp|log|log10|floor|ceil|round|fabs)\\b"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language.aym",
					"match": "(?i)\\b(utji|janiutji|chiqa|k'ari)\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.integer.aym",
					"match": "\\b(0x[0-9a-fA-F]+|0b[01]+|\\d+)\\b"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.interpolated.aym",
					"begin": "\\$\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.aym",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.double.aym",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.aym",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.single.aym",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.escape.aym",
							"match": "\\\\."
						}
					]
				}
			]
		}
	},
	"scopeName": "source.aym"
}
